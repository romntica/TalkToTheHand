<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max Chunk Size (MB)" />

            <TextView
                android:id="@+id/chunk_size_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 MB" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/chunk_size_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="199"
            android:progress="9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Max Storage (MB)"
            android:labelFor="@id/storage_size_input"/>

        <EditText
            android:id="@+id/storage_size_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:autofillHints="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bitrate"
            android:labelFor="@id/bitrate_spinner"/>

        <Spinner
            android:id="@+id/bitrate_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sample Rate"
            android:labelFor="@id/sample_rate_spinner"/>

        <Spinner
            android:id="@+id/sample_rate_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            
        <!-- VAD Sensitivity (Slider) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="VAD Sensitivity" />

            <TextView
                android:id="@+id/silence_threshold_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/silence_threshold_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="15" />

        <!-- Silence Strategy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Aggressive VAD"
            android:labelFor="@id/silence_strategy_spinner"/>

        <Spinner
            android:id="@+id/silence_strategy_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/auto_start_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Auto-Start on Boot" />
            
        <CheckBox
            android:id="@+id/telemetry_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" 
            android:text="Enable Telemetry Logs" />

    </LinearLayout>
</ScrollView>
